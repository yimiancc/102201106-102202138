/** 通用样式 **/
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

button {
  background-color: #CCEEFF; /* 按钮背景颜色 */
  color: black; /* 字体颜色 */
  padding: 12px; /* 内边距 */
  border: none; /* 无边框 */
  border-radius: 5px; /* 圆角 */
  font-size: 18px; /* 字体大小 */
  cursor: pointer; /* 鼠标悬停光标 */
  transition: background-color 0.3s; /* 动画效果 */
}

button:hover {
  background-color: #005bb5; /* 悬停时改变背景颜色 */
}

/** 页面样式 **/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 25px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0);
  border-bottom: .10px solid rgba(0, 0, 0, 0.6);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
