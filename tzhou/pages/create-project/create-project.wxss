/* pages/create-project/create-project.wxss */
.container {
  padding: 20px;
  background-color: #f9f9f9; /* 背景颜色 */
  height: 100vh; /* 充满整个屏幕高度 */
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
}

input, textarea {
  width: 100%; /* 充满宽度 */
  margin: 10px 0; /* 上下间距 */
  padding: 10px; /* 内边距 */
  border: 1px solid #ccc; /* 边框 */
  border-radius: 5px; /* 圆角 */
  font-size: 16px; /* 字体大小 */
}

textarea {
  height: 100px; /* 固定高度 */
  resize: none; /* 禁止缩放 */
}

button {
  background-color: #007aff; /* 按钮背景颜色 */
  color: white; /* 字体颜色 */
  padding: 12px; /* 内边距 */
  border: none; /* 无边框 */
  border-radius: 5px; /* 圆角 */
  font-size: 18px; /* 字体大小 */
  cursor: pointer; /* 鼠标悬停光标 */
  transition: background-color 0.3s; /* 动画效果 */
}

button:hover {
  background-color: #005bb5; /* 悬停时改变背景颜色 */
}
